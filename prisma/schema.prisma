// prisma/schema.prisma
datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Referral {
  id          Int      @id @default(autoincrement())
  yourName    String
  yourEmail   String
  friendName  String
  friendEmail String
  message     String?
}
